<%- include('./includes/header.ejs') %>

<div class="make-container">
    <div class="container mt-4">
        <form action="/" method="post">
            <div class="from-group mb-4">
                <label for="title">Title for post : </label>
                <input value="<%= locals.title  %>" type="text" class="form-control" name="postTitle" id="title">
            </div>
            <div class="from-group mb-4">
                <label for="description">Description : </label>
                <textarea name="postDescription" class="form-control" id="description" cols="30"
                    rows="10"><%= locals.description  %></textarea>
            </div>
            <div class="form-group mb-4">
                <button type="submit" class="form-control btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>


